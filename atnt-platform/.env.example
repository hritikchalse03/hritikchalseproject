# =================================
# ATNT Platform - Environment Variables
# =================================

# Application
NODE_ENV=development
PORT=3000
APP_NAME=ATNT Platform
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atnt_platform
DB_USER=atnt_user
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_PATH=uploads/

# Email Configuration (SendGrid/Nodemailer)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@atnt-platform.com
EMAIL_FROM_NAME=ATNT Platform

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=true

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# WebSocket Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true

# Production Settings (Override in production)
# NODE_ENV=production
# DB_SSL=true
# CORS_ORIGIN=https://your-domain.com
# API_BASE_URL=https://api.your-domain.com
# SOCKET_CORS_ORIGIN=https://your-domain.com
# DEBUG_MODE=false