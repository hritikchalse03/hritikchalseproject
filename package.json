{
  "name": "financestream",
  "version": "1.0.0",
  "description": "A comprehensive financial research platform providing live earnings calls and real-time transcripts",
  "private": true,
  "workspaces": [
    "backend/*",
    "frontend/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend/api-gateway && npm run dev",
    "dev:frontend": "cd frontend/web && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend/api-gateway && npm run build",
    "build:frontend": "cd frontend/web && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend/api-gateway && npm test",
    "test:frontend": "cd frontend/web && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend/api-gateway && npm run lint",
    "lint:frontend": "cd frontend/web && npm run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd backend/api-gateway && npm run db:migrate",
    "db:seed": "cd backend/api-gateway && npm run db:seed",
    "setup": "npm install && npm run docker:up && npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "finance",
    "earnings",
    "transcription",
    "investor-relations",
    "real-time",
    "streaming"
  ],
  "author": "FinanceStream Team",
  "license": "MIT"
}